<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/lemon"
        android:text="Ingresa el nuevo pedimento "
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"
        android:text="Cliente"
        android:textSize="20dp"
        android:fontFamily="@font/lemon"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/edititemname"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/textView3"
        android:layout_marginLeft="140dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-80dp"
        android:background="#515151"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="50dp"
        android:text="UbicaciÃ³n"
        android:textSize="20dp"
        android:fontFamily="@font/lemon"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/editcategory"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginLeft="140dp"
        android:background="#FF505050"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="50dp"
        android:text="Pedimento"
        android:textSize="20dp"
        android:fontFamily="@font/lemon"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/editprice"
        android:inputType="number"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/editcategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="-80dp"
        android:background="#FF505050"
        android:textColor="#fff"
        android:layout_alignLeft="@id/textView5"
        android:layout_marginLeft="140dp"
         />

    <TextView
        android:id="@+id/barcodeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"
        android:text="Codigo de barras"
        android:textSize="20dp"
        android:fontFamily="@font/lemon"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/buttonscan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/barcodeview"
        android:layout_alignBottom="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="223dp"
        android:layout_marginBottom="-88dp"
        android:fontFamily="@font/lemon"
        android:inputType="textPersonName"
        android:text="Escanear" />

    <Button
        android:id="@+id/additembuttontodatabase"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonscan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-120dp"
        android:fontFamily="@font/lemon"
        android:backgroundTint="@color/red"

        android:inputType="textPersonName"
        android:text="Agregar" />


</RelativeLayout>