<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deleteitemsActivity"
    android:orientation="vertical"
    android:background="@drawable/backgroundgradient">

    <TextView
        android:id="@+id/textView"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/lemon"
        android:text="Eliminar Pedimento "
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAlignment="center"
        />


    <ImageButton
        android:id="@+id/buttonscandelete"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="96dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/barcodedelete"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:background="#11AA9E9E"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:ems="10"
        android:hint="Escanea el codigo de barras"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHint="#F7F2F2"
        android:textSize="16dp"
        android:layout_marginLeft="25dp"

        />

    <Button
        android:id="@+id/searchbtnn"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/barcodedelete"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-56dp"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:text="Buscar"
        android:fontFamily="@font/lemon"
        android:textColor="#F7F2F2" />

    <Button
        android:id="@+id/deleteItemToTheDatabasebtn"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Eliminar"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="211dp"
        android:background="#FF00"
        android:fontFamily="@font/lemon"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViews"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="200dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
